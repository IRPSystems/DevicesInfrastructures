<UserControl x:Class="DeviceHandler.Views.DescriptionBallon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:DeviceHandler.Views"
             mc:Ignorable="d"
             MinWidth="200"
             Loaded="Window_Loaded"             
             BorderThickness="2"
             Background="WhiteSmoke"
             BorderBrush="{DynamicResource MahApps.Brushes.Accent}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.Row="0" Foreground="Black" Text="Name:" FontWeight="DemiBold" Grid.Column="0"/>
        <TextBlock Grid.Row="0" Foreground="Black" x:Name="NameText" TextWrapping="Wrap" Grid.Column="2"/>

        <TextBlock Grid.Row="2" Foreground="Black" Text="Description:" FontWeight="DemiBold" Grid.Column="0"/>
        <TextBlock Grid.Row="2" Foreground="Black" x:Name="DescriptionText" TextWrapping="Wrap" Grid.Column="2"/>

        <TextBlock Grid.Row="4" Foreground="Black" Text="Default: " FontWeight="DemiBold" Grid.Column="0"/>
        <TextBlock Grid.Row="4" Foreground="Black" x:Name="DefaultText" Grid.Column="2" TextWrapping="Wrap"/>

        <TextBlock Grid.Row="6" Foreground="Black" Text="Range: " FontWeight="DemiBold" Grid.Column="0"/>
        <TextBlock Grid.Row="6" Foreground="Black" x:Name="rangeText" Grid.Column="2" TextWrapping="Wrap"/>

        <TextBlock Grid.Row="8" Foreground="Black" x:Name="unitsHeader" Text="Units: " FontWeight="DemiBold" Grid.Column="0"/>
        <TextBlock Grid.Row="8" Foreground="Black" x:Name="unitsText" Grid.Column="2" TextWrapping="Wrap"/>

        <TextBlock Grid.Row="10" Foreground="Black" x:Name="scaleHeader" Text="Scale: " FontWeight="DemiBold" Grid.Column="0"/>
        <TextBlock Grid.Row="10" Foreground="Black" x:Name="scaleText" Grid.Column="2" TextWrapping="Wrap"/>

        <TextBlock Grid.Row="12" Foreground="Black" x:Name="foramtHeader" Text="Format: " FontWeight="DemiBold" Grid.Column="0"/>
        <TextBlock Grid.Row="12" Foreground="Black" x:Name="foramtText" Grid.Column="2" TextWrapping="Wrap"/>

    </Grid>
</UserControl>
